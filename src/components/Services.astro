---
import { Cake, Truck, Coffee, PartyPopper } from 'lucide-react';

const services = [
  {
    icon: Cake,
    title: "Tortas Personalizadas",
    description: "Diseños únicos para bodas, cumpleaños y eventos especiales. Tú lo imaginas, nosotros lo horneamos."
  },
  {
    icon: Coffee,
    title: "Cafetería al Paso",
    description: "Disfruta de nuestro café de grano arequipeño acompañado de un antojito recién salido del horno."
  },
  {
    icon: Truck,
    title: "Delivery Seguro",
    description: "Llevamos la dulzura a la puerta de tu casa en todo Arequipa. Empaques especiales que cuidan tu postre."
  },
  {
    icon: PartyPopper,
    title: "Catering para Eventos",
    description: "Mesas de dulces y bocaditos salados para que tus invitados se lleven el mejor recuerdo."
  }
];
---

<section id="servicios" class="py-24 bg-[#FFF8E7] relative overflow-hidden">
  
  <div class="absolute top-0 right-0 -mt-20 -mr-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-72 h-72 bg-yellow-400/10 rounded-full blur-3xl pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <div class="text-center mb-16">
      <h2 class="font-serif text-5xl text-dark mb-4">Nuestros Servicios</h2>
      <p class="text-dark/70 text-lg max-w-2xl mx-auto">
        Más que una pastelería, somos parte de tus celebraciones más importantes.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="bg-white p-8 rounded-3xl shadow-lg border border-orange-100 hover:shadow-xl hover:-translate-y-2 transition-all duration-300 group text-center">
          
          <div class="w-20 h-20 mx-auto bg-[#FFF5E1] rounded-full flex items-center justify-center mb-6 group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
            <service.icon 
              size={40} 
              className="text-primary group-hover:text-white transition-colors duration-300" 
              strokeWidth={1.5}
            />
          </div>
          
          <h3 class="font-serif text-2xl font-bold text-dark mb-3">
            {service.title}
          </h3>
          
          <p class="text-gray-600 leading-relaxed text-sm">
            {service.description}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>